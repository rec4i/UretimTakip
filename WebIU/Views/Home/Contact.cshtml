@model WebIU.Models.Home.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-group", @enctype = "multipart/form-data" }))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="border-bottom">@Language["Contact"]</h4>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>@Language["SubjectType"]</label>
                                <select asp-for="Contact.SubjecTtype" class="form-control">
                                    <option value="@Language["Complaint"]">@Language["Complaint"]</option>
                                    <option value="@Language["Request"]">@Language["Request"]</option>
                                    <option value="@Language["Proposal"]">@Language["Proposal"]</option>
                                    <option value="@Language["Other"]">@Language["Other"]</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>@Language["Subject"]</label>
                                <input asp-for="Contact.Subject" class="form-control" required placeholder="@Language["Subject"]" />
                            </div>
                            <div class="form-group">
                                <label>@Language["Content"]</label>
                                <textarea asp-for="Contact.Content" class="form-control ckeditor" required placeholder="@Language["Content"]"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right bg-white">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-warning text-white"><i class="fa-solid fa-arrow-rotate-left "></i> @Language["Back"]</a>
                    <input type="submit" value="@Language["Save"]" class=" btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>

