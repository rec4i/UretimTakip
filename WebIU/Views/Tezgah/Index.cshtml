@model WebIU.Models.TezgahModels.TezgahIndexViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button class="btn btn-primary" id="TezgahEkleModalAçBtn"><i class="fa fa-plus"></i> Yeni Tezgah Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <table id="OrderList"
                               data-toolbar="#OrderListToolBar"
                               data-pagination="true"
                               data-side-pagination="server"
                               data-id-field="id"
                               data-page-list="[10, 25, 50, 100, all]"
                               data-locale="Tr-tr"
                               data-search="true"
                               data-show-refresh="true"
                               data-show-export="true">
                            <thead>
                                <tr>
                                    <th data-field="id" data-title="id" hidden data-sortable="false"></th>
                                    <th data-field="tezgahAdı" data-title="Tezgah Adı" data-sortable="false"></th>
                                    <th data-field="açıklama" data-title="Açıklama" data-sortable="false"></th>
                                    <th data-title="Actions" data-sortable="false"></th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" id="TezgahEkleModal" aria-labelledby="GenericModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="min-width:1500px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="GenericModalTitle">Tezhag Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body" id="TezgahEkleModalBody">
                <div class="row">
                    <div class="col">
                        <label>Tezgah Adı:</label>
                        <input type="text" id="TezgahAdı" class="form-control" value="" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Açıklama:</label>
                        <textarea class="form-control" id="Açıklama" rows="3"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card card-danger">
                            <div class="card-header">
                                <label>Tezgahta Yapılan İşler</label>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-10">
                                        <select style="width:100%" id="YapılanIşlerSelect" class="form-control">
                                            @foreach (var item in Model.Işs)
                                            {
                                                <option açıklama="@item.Açıklama" value="@item.Id">@item.IşAdı</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-primary btn-block" id="TezgahtaYapılanİşEkle"><i class="fa fa-plus"></i> Ekle</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th> İş Adı</th>
                                                        <th> Açıklama</th>
                                                        <th> İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="YapılanIşBody">
                                                    <tr id="IşSilinecek">
                                                        <td class="text-center" colspan="3"> Hiç Veri Bulunamadı</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button class="btn btn-warning" id="YeniTezgahEkleBtn"><i class="fa fa-save"></i> Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" id="TezgahDüzenleModal" aria-labelledby="GenericModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="min-width:1500px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="GenericModalTitle">Tezhag Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body" id="TezgahEkleModalBody">
                <div class="row">
                    <div class="col">
                        <label>Tezgah Adı:</label>
                        <input type="text" id="TezgahAdıDüzenle" class="form-control" value="" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Açıklama:</label>
                        <textarea class="form-control" id="AçıklamaDüzenle" rows="3"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card card-danger">
                            <div class="card-header">
                                <label>Tezgahta Yapılan İşler</label>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-10">
                                        <select style="width:100%" id="YapılanIşlerSelectDüzenle" class="form-control">
                                            @foreach (var item in Model.Işs)
                                            {
                                                <option açıklama="@item.Açıklama" value="@item.Id">@item.IşAdı</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-primary btn-block" id="TezgahtaYapılanİşEkleDüzenle"><i class="fa fa-plus"></i> Ekle</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th> İş Adı</th>
                                                        <th> Açıklama</th>
                                                        <th> İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="YapılanIşBodyDüzenle">
                                                    <tr id="IşSilinecekDüzenle">
                                                        <td class="text-center" colspan="3"> Hiç Veri Bulunamadı</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button class="btn btn-warning" id="YeniTezgahDüzenleBtn"><i class="fa fa-save"></i> Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        var tezgahtaYapılacakIşler = [];

        $('#TezgahtaYapılanİşEkle').click(function () {
            var boş = '' +
                '  <tr id="IşSilinecek">' +
                '        <td class="text-center" colspan="3"> Hiç Veri Bulunamadı</td>' +
                '    </tr>' +
                '';
            var data = '' +
                '   <tr id="Işdata" IşId="' + $('#YapılanIşlerSelect').find(':selected').val() + '">' +
                '        <td>' + $('#YapılanIşlerSelect').find(':selected').html() + '</td>' +
                '        <td>' + $('#YapılanIşlerSelect').find(':selected').attr('açıklama') + '</td>' +
                '        <td><button class="btn btn-danger" id="YapılanIşSilBtn"><i class="fa fa-trash"></i></button></td>' +
                '    </tr>' +
                '';

            var silinecekCounter = $('#IşSilinecek').each(function () { }).length
            if (silinecekCounter >= 1) {
                var varmı = $('tr[id="Işdata"][IşId="' + $('#YapılanIşlerSelect').find(':selected').val() + '"]').each(function () { }).length

                if (varmı <= 0) {
                    $('#YapılanIşBody').empty();
                    $('#YapılanIşBody').append(data);
                }

            }
            else {
                var varmı = $('tr[id="Işdata"][IşId="' + $('#YapılanIşlerSelect').find(':selected').val() + '"]').each(function () { }).length



                if (varmı <= 0) {
                    $('#YapılanIşBody').append(data);
                }
            }

            $('#YapılanIşSilBtn').click(function () {
                $(this).parent().parent().remove();
                var dataCounter = $('#Işdata').each(function () { }).length
                var silinecekCounter = $('#IşSilinecek').each(function () { }).length
                if (dataCounter <= 0) {
                    if (silinecekCounter <= 0) {
                        $('#YapılanIşBody').append(boş);
                    }
                }
            })
        })



        $('#TezgahtaYapılanİşEkleDüzenle').click(function () {

            var boş = '' +
                '  <tr id="IşSilinecekDüzenle">' +
                '        <td class="text-center" colspan="3"> Hiç Veri Bulunamadı</td>' +
                '    </tr>' +
                '';
            var data = '' +
                '   <tr id="IşdataDüzenle"  IşId="' + $('#YapılanIşlerSelectDüzenle').find(':selected').val() + '">' +
                '        <td>' + $('#YapılanIşlerSelectDüzenle').find(':selected').html() + '</td>' +
                '        <td>' + $('#YapılanIşlerSelectDüzenle').find(':selected').attr('açıklama') + '</td>' +
                '        <td><button IşId="' + $('#YapılanIşlerSelectDüzenle').find(':selected').val() + '" class="btn btn-danger" id="YapılanIşSilBtnDüzenle"><i class="fa fa-trash"></i></button></td>' +
                '    </tr>' +
                '';

            var silinecekCounter = $('#IşSilinecekDüzenle').each(function () { }).length
            if (silinecekCounter >= 1) {

                var varmı = $('tr[id="IşdataDüzenle"][IşId="' + $('#YapılanIşlerSelectDüzenle').find(':selected').val() + '"]').each(function () { }).length
                if (varmı <= 0) {
                    $('#YapılanIşBodyDüzenle').empty();
                    $('#YapılanIşBodyDüzenle').append(data);
                }
            }
            else {
                var varmı = $('tr[id="IşdataDüzenle"][IşId="' + $('#YapılanIşlerSelectDüzenle').find(':selected').val() + '"]').each(function () { }).length
                if (varmı <= 0) {
                    $('#YapılanIşBodyDüzenle').append(data);
                }
            }

            $('button[id="YapılanIşSilBtnDüzenle"][IşId="' + $('#YapılanIşlerSelectDüzenle').find(':selected').val() + '"]').click(function () {
                $(this).parent().parent().remove();

                var dataCounter = $('#IşdataDüzenle').each(function () { }).length
                var silinecekCounter = $('#IşSilinecekDüzenle').each(function () { }).length
                if (dataCounter <= 0) {
                    if (silinecekCounter <= 0) {
                        $('#YapılanIşBodyDüzenle').append(boş);
                    }
                }
            })
        })


        $('#YapılanIşlerSelectDüzenle').select2({
            dropdownParent: $("#TezgahDüzenleModal")
        })

        $('#YapılanIşlerSelect').select2({
            dropdownParent: $("#TezgahEkleModal")
        })
        OrderTablosuDoldur()


        $('#TezgahEkleModalAçBtn').click(function () {
            $('#TezgahEkleModal').modal('show')
        })

        $('#YeniTezgahEkleBtn').click(function () {
            var data = new FormData();
            data.append('TezgahAdı', $('#TezgahAdı').val())
            data.append('Açıklama', $('#Açıklama').val())

            $('tr[id="Işdata"]').each(function () {
                data.append('IşsIds[]', $(this).attr('IşId'))
            })



            $.ajax({
                url: "/Tezgah/TezgahEkle",
                type: "POST",
                processData: false,
                contentType: false,
                async: false,
                data: data,
                success: function (data) {
                    if (data.status == 1) {
                        successAlert(data.message)
                    }
                    else {
                        errorAlert(data.message)
                    }
                    OrderTablosuDoldur()
                },
            });

        })




        $('#YeniTezgahDüzenleBtn').click(function () {
            var data = new FormData();
            data.append('Id', $(this).attr('TezgahId'))
            data.append('TezgahAdı', $('#TezgahAdı').val())
            data.append('Açıklama', $('#Açıklama').val())

            $('tr[id="IşdataDüzenle"]').each(function () {
                data.append('IşsIds[]', $(this).attr('IşId'))
            })



            $.ajax({
                url: "/Tezgah/TezgahDüzenle",
                type: "POST",
                processData: false,
                contentType: false,
                async: false,
                data: data,
                success: function (data) {
                    if (data.status == 1) {
                        successAlert(data.message)
                    }
                    else {
                        errorAlert(data.message)
                    }
                    OrderTablosuDoldur()
                },
            });
        })


    })


    function OrderTablosuDoldur() {
        $('#OrderList').bootstrapTable("destroy")
        $('#OrderList').bootstrapTable({
            url: "/Tezgah/TezgahGetPagination",
            columns: [
                [
                    {},
                    {},
                    {},
                    {
                        formatter: ActionFormatter
                    },
                ]
            ],
            onLoadSuccess: afterLoad,
        })
        function ActionFormatter(value, row) {
            var value = "";
            value += "<button id='TezgahDüzenleModalAçBtn' TezgahId='" + row["id"] + "' class='btn btn-warning'><i class='fa fa-edit'></i> Düzenle</button> ";
            value += "<button id='TezgahQrKodIndirBtn' guid='" + row["guid"] + "' TezgahId='" + row["id"] + "' class='btn btn-warning'><i class='fa fa-qrcode'></i> Qr Kodu Bastır</button> ";

            value += "<button id='TezgahSil' TezgahId='" + row["id"] + "' class='btn btn-danger'><i class='fa fa-trash'></i></button>";

            return value
        }
        function afterLoad() {
            $('*#TezgahSil').click(function () {
                var data = new FormData();
                data.append('Id', $(this).attr('TezgahId'))

                Swal.fire({
                    title: ' silinecektir!',
                    text: 'Silmek istediğinizden emin misiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    cancelButtonText: "Geri dön",
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sil'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/Tezgah/TezgahSil",
                            type: "POST",
                            processData: false,
                            contentType: false,
                            async: false,
                            data: data,
                            success: function (data) {
                                if (data.status == 1) {
                                    successAlert(data.message)
                                }
                                else {
                                    errorAlert(data.message)
                                }
                                OrderTablosuDoldur()
                            },
                        });
                    }
                })

            })


            $('*#TezgahQrKodIndirBtn').click(function () {

                console.log("asdasd");

                const { jsPDF } = window.jspdf;
                const canvas = document.createElement('canvas');
                var qrcode = new QRCode(canvas, {
                    text: "2-" + $(this).attr('guid'),
                    width: 128,
                    height: 128,
                    colorDark: "#000000",
                    colorLight: "#ffffff",
                    correctLevel: QRCode.CorrectLevel.H
                });


                const pdf = new jsPDF();
                //var _data = $(canvas).find('img').attr('src')
                // QR kodunu canvas üzerinden veriyi alarak PDF'e ekle
                const imgData = canvas.toDataURL("image/jpeg");
                console.log(qrcode._oDrawing._elCanvas.toDataURL("image/png"));
                pdf.addImage(qrcode._oDrawing._elCanvas.toDataURL("image/png"), 'PNG', 10, 10, 50, 50);

                // PDF dosyasını indir
                pdf.save('qrcode.pdf');



            })






            $('#TezgahDüzenleModalAçBtn').click(function () {
                $('#TezgahDüzenleModal').modal('show')
                var data = new FormData();
                data.append('Id', $(this).attr('TezgahId'))
                $('#YeniTezgahDüzenleBtn').attr('TezgahId', $(this).attr('TezgahId'))


                $.ajax({
                    url: "/Tezgah/GetTezgah",
                    type: "POST",
                    processData: false,
                    contentType: false,
                    async: false,
                    data: data,
                    success: function (data) {
                        $('#TezgahAdıDüzenle').val(data[0].tezgahAdı)
                        $('#AçıklamaDüzenle').val(data[0].açıklama)
                        $('#YapılanIşBodyDüzenle').empty();

                        for (var i = 0; i < data[0].tezgah_Iş_MTMs.length; i++) {

                            var satır = '' +
                                '   <tr id="IşdataDüzenle"  IşId="' + data[0].tezgah_Iş_MTMs[i].iş.id + '">' +
                                '        <td>' + data[0].tezgah_Iş_MTMs[i].iş.işAdı + '</td>' +
                                '        <td>' + data[0].tezgah_Iş_MTMs[i].iş.açıklama + '</td>' +
                                '        <td><button IşId="' + data[0].tezgah_Iş_MTMs[i].iş.id + '" class="btn btn-danger" id="YapılanIşSilBtnDüzenle"><i class="fa fa-trash"></i></button></td>' +
                                '    </tr>' +
                                '';

                            $('#YapılanIşBodyDüzenle').append(satır);


                            var boş = '' +
                                '  <tr id="IşSilinecekDüzenle">' +
                                '        <td class="text-center" colspan="3"> Hiç Veri Bulunamadı</td>' +
                                '    </tr>' +
                                '';
                            $('button[id="YapılanIşSilBtnDüzenle"][IşId="' + data[0].tezgah_Iş_MTMs[i].iş.id + '"]').click(function () {
                                $(this).parent().parent().remove();

                                var dataCounter = $('#IşdataDüzenle').each(function () { }).length
                                var silinecekCounter = $('#IşSilinecekDüzenle').each(function () { }).length
                                if (dataCounter <= 0) {
                                    if (silinecekCounter <= 0) {
                                        $('#YapılanIşBodyDüzenle').append(boş);
                                    }
                                }
                            })
                        }

                    },
                });

            })

        }

    }



</script>