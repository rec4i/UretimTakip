@model WebIU.Models.Role.CreateImplementerRoleViewModel

@{
    ViewData["Title"] = "CreateImplementerRole";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="border-bottom">@Language["AddRole"]</h4>
                    </div>
                    <div class="col-12">
                        @using (Html.BeginForm("CreateImplementerRole", "Role", FormMethod.Post))
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          
                            <div class="form-group">
                                <label>@Language["RoleName"]</label>
                                <input asp-for="RoleName" class="form-control" placeholder="@Language["RoleName"]" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right my-2">
                                <input type="submit" value="@Language["Save"]" class="btn btn-success" />
                                <a href="/Role/RoleList" class="btn btn-primary">@Language["Back"]</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>