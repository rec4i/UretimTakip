@model WebIU.Models.Setting.AddNewMenuItemViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form action="/Setting/AddNewMenuItem" method="post">
                    <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
                    <div class="row">
                        <div class="col-md-6">
                            <span>@Language["MenuItemName"]:</span>
                            <input class="form-control" asp-for="Name" type="text" placeholder="@Language["MenuItemName"]" />
                        </div>
                        <div class="col-md-6">
                            <span>@Language["MenuItemIconCss"]: </span>
                            <input class="form-control" asp-for="IconCss" type="text" placeholder="@Language["MenuItemIconCss"]" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <span>@Language["Url"] (@Language["PutSharpİfYouWantToBeParent"]): </span>
                            <input class="form-control" asp-for="Url" type="text" placeholder="Url" />
                        </div>
                        <div class="col-md-6">
                            <span>@Language["Order"] :</span>
                            <select class="select2" asp-for="Order" style="width:100%">
                                @for (int i = 0; i < Model.OrderCount; i++)
                                {

                                    <option value="@(i+1)">@(i+1)</option>
                                }
                            </select>
                        </div>

                    </div>
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @Language["Save"]</button>
                        </div>
                        <div class="p-2">
                            <a href="/Setting/MenuList" class="btn btn-warning"><i class="fa-solid fa-arrow-rotate-left"></i> @Language["BackToList"]</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>